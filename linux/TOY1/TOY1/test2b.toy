object [lolo] [
	u8.256		name
	u16.3		price
	data [next] lolo
/]

data [obj] lolo

new [obj] 
copy [obj.name] "ffgerwgrw"
index [obj.price] 2
icopy [obj.price] 654
new [obj.next]
delete [obj.next]


text <laskEN> "Do you accept the license? "
text <laskFR> " Acceptez-vous la licence? "

text <question>	"Quel est ton nom, toi? "
text <answer>	"Donc, bonjour, "
text <hi>		"coucou "

text [bye]		"Bye "
text [byeFR]	" Au Revoir! "

macro [ask1] <
	text [name]
	input [name] question
	print answer, name, " :-) "

	integer <tempo>
	TICKCOUNT[tempo]|+[tempo]2600
	integer<temps>666|integer<a>|TICKCOUNT[a]|+[a]temps
	   =1|loop[|TICKCOUNT|>a|if[|TICKCOUNT[a]|+[a]temps
			print "!"
	/]|TICKCOUNT|>tempo|if[
			print hi, name
	TICKCOUNT[tempo]|+[tempo]2600
	/]|=2|/]
/>

print license

text <qs>
input <qs> laskEN, "/", laskFR
integer [zo]	0

==[qs] "y"		|if[|+[zo]1|/]
==[qs] "yes"	|if[|+[zo]1|/]
==[qs] "o"		|if[|+[zo]1|/]
==[qs] "oui"	|if[|+[zo]1|/]

=zo|if [
	ask1
/]| if [
	print bye, "," byeFR
/]